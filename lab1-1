#include <locale.h>
#include <stdio.h>
#include <math.h>

int main()
{
	setlocale(LC_ALL, "");
printf("Введите катеты прямоугольного треугольника: \n");
float a, S, b, c;
scanf("%f%f", &a, &b);
c = sqrt((a * a) + (b * b));   //нахождение гипотенузы треугольника
S = (a * b) / 2;  //нахождение площади треугольника
printf("Гипотенуза треугольника: (%.2f)\n", c);
printf("Площадь треугольника: (%.2f)\n", S); 
}
